rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper to check if user belongs to the company (assuming custom claims or separate logic)
    // For MVP, we might just check if they are authenticated.
    
    match /companies/{companyId} {
      allow read: if isAuthenticated();
      // Only allow creation via Admin SDK or specific setup logic (closed for now)
      allow write: if false; 

      match /employees/{employeeId} {
        allow read, write: if isAuthenticated();
      }

      match /rules/{ruleId} {
        allow read, write: if isAuthenticated();
      }

      match /schedules/{scheduleId} {
        allow read, write: if isAuthenticated();
      }
      
      match /learning_logs/{logId} {
        allow create: if isAuthenticated(); // Append-only ideally
        allow read: if isAuthenticated();
        allow update, delete: if false;
      }
    }
  }
}
